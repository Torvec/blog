---
import BaseHead from "../components/base-head.astro"
import Header from "./header.astro"
import Footer from "./footer.astro"

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-background text-foreground flex min-h-screen flex-col antialiased">
    <Header />
    <main class="container mx-auto max-w-[60ch] flex-grow px-2 leading-relaxed lg:px-0">
      <slot />
    </main>
    <Footer />
  </body>
</html>
